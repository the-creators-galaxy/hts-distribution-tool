{
  "name": "@creators-galaxy/token-distribution-tool",
  "version": "1.3.0",
  "description": "Creator's Galaxy Token Distribution Tool",
  "author": "Calaxy, Inc.",
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --config .prettierrc.json src/**/*.ts test/**/*.ts --write",
    "test": "mocha -r ts-node/register -r dotenv/config test/**/*.spec.ts",
    "test:unit": "mocha -r ts-node/register -r dotenv/config test/unit/**/*.spec.ts",
    "test:integration": "mocha -r ts-node/register -r dotenv/config test/integration/**/*.spec.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "mocha": "^11.1.0",
    "rollup": "^4.35.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.2.2",
    "svelte": "^5.22.6",
    "svelte-check": "^4.1.5",
    "svelte-preprocess": "^6.0.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@hashgraph/proto": "2.16.0",
    "@hashgraph/sdk": "2.60.1",
    "csv-parse": "^5.0.4",
    "csv-stringify": "^6.0.5",
    "prettier": "^2.6.2",
    "sirv-cli": "^2.0.2"
  }
}
