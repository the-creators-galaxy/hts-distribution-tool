{
  "name": "@creators-galaxy/token-distribution-tool",
  "version": "1.1.0",
  "description": "Creator's Galaxy Token Distribution Tool",
  "author": "Calaxy, Inc.",
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --config .prettierrc.json src/**/*.ts test/**/*.ts --write",
    "test": "mocha -r ts-node/register -r dotenv/config test/**/*.spec.ts",
    "test:unit": "mocha -r ts-node/register -r dotenv/config test/unit/**/*.spec.ts",
    "test:integration": "mocha -r ts-node/register -r dotenv/config test/integration/**/*.spec.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "electron": "^18.2.0",
    "electron-builder": "^23.0.3",
    "mocha": "^10.0.0",
    "rollup": "^2.71.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.0",
    "svelte-preprocess": "^4.10.6",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@hashgraph/proto": "^2.4.0",
    "@hashgraph/sdk": "^2.13.1",
    "csv-parse": "^5.0.4",
    "csv-stringify": "^6.0.5",
    "prettier": "^2.6.2",
    "sirv-cli": "^2.0.2"
  }
}
